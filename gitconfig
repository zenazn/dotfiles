[user]
  name = Carl Jackson
  email = carl@avtok.com

[alias]
  ama = commit --amend -CHEAD
  amend = commit --amend
  br = branch
  co = checkout
  cp = cherry-pick
  cpx = cherry-pick -x
  d = diff
  dc = diff --cached
  l = log
  mkbr = "!f() { git checkout -b $1 origin/master; }; f"
  pop = stash pop
  pp = log --graph --pretty=format:'%C(yellow)%h%Creset %Cgreen%s%Creset - %aN, %ar%Cblue%d%Creset'
  rb = "!f() { git checkout --no-track -b $1 origin/master; git branch --set-upstream origin $1; }; f"
  review = push origin HEAD:refs/for/master
  s = status
  st = stash --include-untracked
  sup = !git stash && git pull --rebase && git stash pop
  stat = diff --stat
  up = pull --rebase
  w = whatchanged
  wip = !git add -A && git commit -m "wip"

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  pager = less -FRS
  whitespace = fix,trailing-space,space-before-tab,cr-at-eol
  editor = /usr/bin/vim
  excludesfile = ~/.gitignore

[apply]
  whitespace = fix
[advice]
  pushNonFastForward = false
  statusHints = false
[diff]
  renames = copies
  mnemonicprefix = true
[branch]
  autosetupmerge = true
[push]
  default = tracking
[rerere]
  enabled = true
[merge]
  stat = true
