[user]
  name = Carl Jackson
  email = carl@avtok.com

[alias]
  ama = commit --amend -CHEAD
  amend = commit --amend
  au = add -u
  br = branch
  cl = "!f() { git clone \"git@github.com:$1.git\"; }; f"
  co = checkout
  cp = cherry-pick
  cpx = cherry-pick -x
  d = diff
  dc = diff --cached
  ff = merge --ff-only
  fup = !git fetch && git rebase origin/master
  l = log
  pop = stash pop
  pp = log --graph --pretty=format:'%C(yellow)%h%Creset %Cgreen%s%Creset - %aN, %ar%Cblue%d%Creset'
  rb = "!f() { if [ -z \"$1\" ]; then echo You must provide a branch name; exit 1; fi; git checkout -b \"$1\" $(git config rb.branch); git config \"branch.$1.merge\" \"refs/heads/$1\"; }; f"
  re = "!git rebase $(git config rb.branch)"
  s = status
  showsig = show --show-signature
  sign = commit --amend -CHEAD --gpg-sign
  st = -c commit.gpgsign=false stash --include-untracked
  sup = "!git stash && git pull --rebase && git stash pop"
  up = pull --rebase
  wip = !git add -A && git commit -m "wip"

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  pager = less -FRS
  whitespace = fix,trailing-space,space-before-tab,cr-at-eol
  editor = vim
  excludesfile = ~/.gitignore

[apply]
  whitespace = fix
[advice]
  pushNonFastForward = false
  statusHints = false
[diff]
  renames = copies
  mnemonicprefix = true
[branch]
  autosetupmerge = true
[push]
  default = upstream
[rerere]
  enabled = true
[merge]
  stat = true
  conflictstyle = diff3

[include]
  path = ~/.gitoverride
[http]
  cookiefile = /Users/carl/.gitcookies
[alias]
  change = codereview change
  gofmt = codereview gofmt
  mail = codereview mail
  pending = codereview pending
  submit = codereview submit
  sync = codereview sync
[pull]
  rebase = true
[rebase]
  autosquash = true

[rb]
  branch = origin/master
