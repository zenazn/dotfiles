" Don't emulate vi bugs
set nocompatible

" Syntax highlighting
syntax on
filetype on

" Autocompletion
set wildmenu
set wildmode=list:longest

" Indentation and such
set autoindent
set smartindent
set tabstop=2
set shiftwidth=2
set expandtab

" Show matching brace
set showmatch

" Visual bells
set vb t_vb=

" Always show ruler
set ruler
set title

" Search stuff
set nohlsearch
set incsearch
set magic
set ignorecase
set infercase
set smartcase

